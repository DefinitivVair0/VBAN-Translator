<Window x:Class="VbanTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VbanTranslator"
        mc:Ignorable="d"
        Title="MainWindow" Height="274" Width="616" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <TextBox x:Name="TB_VBAN" HorizontalAlignment="Left" Margin="10,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="156"/>
        <Button x:Name="BTN_Translate" Content="Translate" HorizontalAlignment="Left" Margin="10,196,0,0" VerticalAlignment="Top" Height="33" Width="580" Click="BTN_Translate_Click"/>
        <TextBox x:Name="TB_SName" HorizontalAlignment="Left" Margin="400,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="23"/>
        <Label Content="Command" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Label Content="Stream Name" HorizontalAlignment="Left" Margin="400,0,0,0" VerticalAlignment="Top"/>
        <Label Content="Info" HorizontalAlignment="Left" Margin="400,69,0,0" VerticalAlignment="Top" Background="White" Foreground="#FFADADAD" Height="23"/>
        <Label x:Name="L_Info" Content="" HorizontalAlignment="Left" Margin="400,92,0,0" VerticalAlignment="Top" Height="90" Width="190" BorderThickness="1,1,1,1" BorderBrush="#FFADADAD" Foreground="#FFADADAD"/>
        <CheckBox x:Name="CKB_ASCII" Content="Pure ASCII" HorizontalAlignment="Left" Margin="400,54,0,0" VerticalAlignment="Top" Checked="CKB_ASCII_Checked" Unchecked="CKB_ASCII_Unchecked"/>

    </Grid>
</Window>
